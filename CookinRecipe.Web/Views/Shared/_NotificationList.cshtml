@model List<Notification>

	<div class="p-2 border-b text-gray-800 font-medium text-xl">Thông báo</div>
	@if(Model!=null){
	<ul class="divide-y divide-gray-200">
		
	@foreach (var n in Model)
	{
		<li class="p-3 hover:bg-gray-100">
			<a href="~/Recipe/Index" class="flex space-x-3">
				<span class="bg-blue-500 text-white rounded-full h-8 w-8 flex items-center justify-center">🔔</span>
				<div class="text-sm">
					<p class="font-medium">@n.Message</p>
					<span class="text-gray-500 text-xs">@n.CreatedAt</span>
				</div>
			</a>
		</li>
	}
	</ul>
	<div class="p-3 text-center border-t">
		<a href="#" class="text-blue-500 font-medium">Xem tất cả thông báo</a>
	</div>
		}
		@if(Model==null||!Model.Any()){
	<div class="p-3 text-center border-t">

		<p class="text-gray-500 font-medium"> Bạn chưa có thông báo</p>
	</div>
		}