<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp</title>

    @* <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />  *@
    <link href="~/lib/filepond/filepond.min.css" rel="stylesheet" />

    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    @* <link href="~/css/styles.css" rel="stylesheet" /> *@
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    @*font-awesome*@
    <link href="https://fonts.googleapis.com/css2?family=Cabin:wght@400;500;600;700&family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />

    @* jQuery *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery_ui/jquery-ui-1.13.2/jquery-ui.min.js"></script>

    @* Bootstrap 4.2 *@
    <link rel="stylesheet" href="~/lib/bootstrap42/css/bootstrap.min.css" />
    <script src="~/lib/bootstrap42/js/bootstrap.min.js"></script>

    @* datatable *@
    <script src="~/lib/DataTables/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="~/lib/DataTables/checkboxes.min.js" asp-append-version="true"></script>
    <script src="~/lib/datatables/datatables.rowgroup.min.js"></script>
    <script src="~/lib/datatables/datatables.rowsgroup.js"></script>

    @* select2 *@
    <script src="~/lib/select2/select2.min.js" asp-append-version="true"></script>
    <link href="~/lib/select2/select2.min.css" rel="stylesheet">
    <link href="~/lib/select2/select2-bootstrap4.min.css" rel="stylesheet">

    @* datetimepicker *@
    <script src="~/lib/datetimepicker/moment-with-locales.min.js"></script>
    <script src="~/lib/datetimepicker/bootstrap-datetimepicker.min.js"></script>
    <link href="~/lib/datetimepicker/bootstrap-datetimepicker.min.css" rel="stylesheet">

    @*Filepond*@
    <script src="~/lib/filepond/filepond-plugin-file-validate-type.min.js"></script>
    <script src="~/lib/filepond/filepond.min.js"></script>
    <script src="~/lib/filepond/filepond.jquery.js"></script>

    @*AdminLTE*@
    <link href="~/lib/adminlte/css/adminlte.min.css" rel="stylesheet" />
    <script src="~/lib/adminlte/js/adminlte.min.js"></script>

    @*ckeditor*@
    <script src="~/lib/ckeditor5/ckeditor.js"></script>
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/ckeditor/4.0.1/ckeditor.js" type="text/javascript"></script>*@
    <script src="~/lib/ckeditor5/adapters/jquery.js"></script>
    <link rel="stylesheet" href="~/css/cms.css" asp-append-version="true" />

    @*NotiFy*@
    <script src="~/lib/notify/bootstrap-notify.min.js"></script>
    <link href="~/css/animate.css" rel="stylesheet" />


    @* datatable button *@
    <link rel="stylesheet" type="text/css" href="~/lib/DataTables/Buttons-2.0.1/buttons.dataTables.min.css">
    <script src="~/lib/DataTables/Buttons-2.0.1/dataTables.buttons.min.js"></script>
    <script src="~/lib/DataTables/JSZip-2.5.0/jszip.min.js"></script>
    <script src="~/lib/DataTables/Buttons-2.0.1/buttons.html5.min.js"></script>
</head>
<body class="sb-nav-fixed layout-fixed">
    <div class="wrapper">
        <div class="preloader"></div>
        <div class="main-header navbar navbar-expand">
            <partial name="_LoginPartial" />
        </div>
        <aside class="main-sidebar">
            <a href="/" class="brand-link">
                <img src="~/cms_images/Logo.png" alt="Hộ chiếu du lịch - Thành phố Huế" class="brand-image">
                <div class="logocontent">
                    <img src="~/cms_images/SubLogo.png" alt="Hộ chiếu du lịch - Thành phố Huế" class="brand-subimage">
                </div>
            </a>
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-sidebar flex-column" data-widget="treeview" role="menu" id="navMainMenu" data-accordion="true">
                        <li class="nav-item has-treeview d-none">
                            <a class="nav-link collapsed" href="#" Title="Quản lý người dùng">
                                Hệ thống
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                            </a>
                            <ul class="nav nav-treeview" data-widget="treeview" data-accordion="false" id="HeThong">
                                <li class="nav-item">
                                    <a class="nav-link" href="401.html">401 Page</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="404.html">404 Page</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="500.html">500 Page</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <div class="content-wrapper">
            <div id="layoutSidenav_content">
                <main>
                    <div class="mainContent">
                        <main role="main" class="pb-3">
                            @RenderBody()
                        </main>
                    </div>
                </main>
            </div>
        </div>
        <footer class="main-footer">
            <div class="footer-left">
                © 2025, Hộ chiếu du lịch - Thành phố Huế
            </div>
            <div class="footer-right">
                Thiết kế và xây dựng: <a href="https://www.huecit.vn" target="_blank">HueCIT</a>
            </div>
        </footer>
    </div>

    <!-- AJAX để gọi API và render sidebar -->
    <script src="~/views/layout/index.js"></script>
    <script src="~/js/scripts.js"></script>
    <script src="~/views/Menu/sidebar.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>